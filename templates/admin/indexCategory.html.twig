{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <div class="wrapper">
        <h1>Category</h1>
        <div class="knp_pagination_filter">
            {{ knp_pagination_filter(pagination, {'c.id':'ID','c.name':'Name'},template = 'twitter_bootstrap_v4_filtration.html.twig') }}
        </div>
        <div>
            <a class="btn btn-primary btn-sm" href={{ path('category_create') }}>
                Add new category
            </a>
        </div>
        <table class="table table-hover table-responsive">
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
            {% for category in pagination %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href={{ path('category_update',{id:category.id}) }}>
                            Edit
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" href={{ path('category_delete',{id:category.id}) }}>
                            Delete
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
    <div class="navigation text-center">
        {{ knp_pagination_render(pagination,'twitter_bootstrap_v3_pagination.html.twig') }}
    </div>
{% endblock %}
