{% extends 'admin/index.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <div class="wrapper">
        <h1>Statuses</h1>
        <div class="knp_pagination_filter">
            {{ knp_pagination_filter(pagination, {'s.id':'ID','s.name':'Name'},template = 'twitter_bootstrap_v4_filtration.html.twig') }}
        </div>
        <div>
            <a class="btn btn-primary btn-sm" href={{ path('status_create') }}>
                Add new status
            </a>
        </div>
        <table class="table table-hover table-responsive">
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
            {% for status in pagination %}
                <tr>
                    <td>{{ status.id }}</td>
                    <td>{{ status.name }}</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href={{ path('status_edit',{id:status.id}) }}>
                            Edit
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" href={{ path('status_delete',{id:status.id}) }}>
                            Delete
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
    <div class="navigation text-center">
        {{ knp_pagination_render(pagination,'twitter_bootstrap_v3_pagination.html.twig') }}
    </div>
{% endblock %}
