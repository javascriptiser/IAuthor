{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <style>
        .home-wrapper {
            background-color: #ccc;
            padding: 15px 41px;
        }

        .home-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .home-content__title h1, .home-content__subtitle h3 {
            font-family: Verdana, sans-serif;
            font-size: 30px;
        }

        .home-content__title {
            margin-top: 15px;
        }

        .home-content__subtitle {
            margin-bottom: 15px;
        }

        .home-content__search {
            width: 100%;
        }

        .home-content__fandom-container {
            width: 100%;
            display: grid;
            grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
            grid-template-rows: 1fr 1fr;
            gap: 20px;
            grid-template-areas:
    ". . . . ."
    ". . . . .";
            margin-bottom: 20px;
        }

        .fandom-container__item {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 260px;
            background-color: #B0413E;
            position: relative;
            background-size: cover;
            background-position: center center;
            background-repeat: no-repeat;
        }

        .fandom-container__item span {
            text-align: center;
            background: #fff;
            bottom: 50px;
            color: #000;
            display: block;
            padding: 8px 0;
            position: absolute;
            transition: .3s;
            width: 100%;
        }
    </style>
    <div class="home-wrapper">
        <div class="home-content">
            <div class="home-content__title">
                <h1>ЯАВТОР</h1>
            </div>
            <div class="home-content__subtitle">
                <h1>Миллионы историй о твоих любимых персонажах</h1>
            </div>
            <div class="home-content__search">
                {{ form_start(form) }}
                {{ form_row(form.title,{'attr':{'class':'home-content__searchInput'}}) }}
                {{ form_end(form) }}
            </div>
            <h2>Фэндомы</h2>
            <div class="home-content__fandom-container">
                {% for fandom in fandoms %}
                    <a href="{{ path('stories/fandom_show', {'id': fandom.id}) }}"
                       class="fandom-container__item"
                            {% if fandom.image %}
                                style="background-image: url({{ asset('uploads/') }}{{ fandom.image }})"
                            {% else %}
                                style="background-image: url({{ asset('images/defaultBanner.png') }})"
                            {% endif %}
                    >
                        <span>
                            {{ fandom.name }}
                        </span>
                    </a>
                {% endfor %}
            </div>
            <h2>Категории</h2>
            <div class="home-content__fandom-container">
                {% for category in categories %}
                    <a href="{{ path('stories/category_show', {'id': category.id}) }}"
                       class="fandom-container__item"
                            {% if category.image %}
                                style="background-image: url({{ asset('uploads/') }}{{ category.image }})"
                            {% else %}
                                style="background-image: url({{ asset('images/defaultBanner.png') }})"
                            {% endif %}
                    >
                        <span>
                            {{ category.name }}
                        </span>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        window.onload = function () {
            const select = $('.home-content__searchInput');
            $(select).select2({
                maximumSelectionLength: 2
            });
            $(select).on('select2:select', function (e) {
                console.log('select event');
            });
        };
    </script>
{% endblock %}