{% extends 'base.html.twig' %}

{% block title %}Регистрация нового пользователя{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password, {'value':''}) }}
    {{ form_end(form) }}
{% endblock %}
