{% extends 'base.html.twig' %}

{% block title %}Hello StoryController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.category,{'attr':{'class':'custom-select2'}}) }}
    {{ form_row(form.fandom,{'attr':{'class':'custom-select2'}}) }}
    {{ form_row(form.characters,{'attr':{'class':'custom-select2','multiple':'multiple'}}) }}
    {{ form_row(form.mpaaRating) }}
    {{ form_row(form.tags,{'attr':{'class':'custom-select2','multiple':'multiple'}}) }}
    {{ form_row(form.description) }}
    {{ form_row(form.authorsNote) }}
    {{ form_row(form.status) }}
    {{ form_row(form.save) }}
    {{ form_end(form) }}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        window.onload = function() {
            $('.custom-select2').select2({

            });
        };
    </script>
{% endblock %}